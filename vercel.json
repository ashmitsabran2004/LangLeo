{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/chatbot/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            {
                "version": 2,
                "builds": [
                    {
                        "src": "api/index.js",
                        "use": "@vercel/node"
                    },
                    {
                        "src": "package.json",
                        "use": "@vercel/static-build",
                        "config": {
                            "distDir": "frontend/chatbot/dist"
                        }
                    }
                ],
                "rewrites": [
                    {
                        "source": "/api/(.*)",
                        "destination": "/api/index.js"
                    },
                    {
                        "source": "/(.*)",
                        "destination": "/frontend/chatbot/index.html"
                    }
                ]
            }
